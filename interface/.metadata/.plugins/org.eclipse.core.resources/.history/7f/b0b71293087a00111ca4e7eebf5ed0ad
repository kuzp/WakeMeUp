    		InputStream inpst = response.getEntity().getContent(); // Внимание! начало быдлокода!
    		String jsonInString = convertStreamToString(inpst);
    		Log.e("json: ",jsonInString);
    		
    		JSONObject jsonO1 = new JSONObject(jsonInString);
    		
    	} catch (ClientProtocolException e) {

    		// TODO Auto-generated catch block

    	} catch (IOException e) {

    		// TODO Auto-generated catch block

    	} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
